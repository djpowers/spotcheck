<div class="row">
  <div class="small-6 large-centered columns">
    <h1>New Project</h1>

    <%= simple_form_for(@project) do |f| %>

        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :status %>
        <%= f.input :due_date, label: 'Due Date', as: :datetime, include_blank: true %>
        <%= f.button :submit %>

    <% end %>
  </div>
</div>
