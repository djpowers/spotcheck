<div class="row">
  <div class="small-4 columns">
    <%= image_tag("spotcheck_logo_dark.png", alt: "Spotcheck logo") %>
  </div>
  <div class="small-8 columns">
    <h1>Spotcheck</h1>
    <h4>Spotcheck is a repository for your creative video projects, housing revisions, comments, and changes under one roof.</h3>
  </div>
</div>

<div class="row">
  <div class="small-12 large-centered columns">
    <%= video_tag("spotcheck_demo.mp4", controls: true, size: "640x360") %>
  </div>
</div>

